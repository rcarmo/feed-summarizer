# Example secrets.yaml file for Feed Summarizer
# Copy this file to secrets.yaml and set SECRETS_FILE=secrets.yaml environment variable
# DO NOT commit the actual secrets.yaml file to version control

environment:
  # Azure OpenAI Configuration
  AZURE_ENDPOINT: "https://your-resource.openai.azure.com/"
  OPENAI_API_KEY: "your-azure-openai-api-key"
  DEPLOYMENT_NAME: "gpt-5-mini"
  OPENAI_API_VERSION: "2024-12-01-preview"
  
  # Azure Storage Configuration (for publishing)
  AZURE_STORAGE_ACCOUNT: "yourstorageaccount"
  AZURE_STORAGE_KEY: "your-storage-account-key"
  AZURE_STORAGE_CONTAINER: "$web"
  
  # RSS Publishing Configuration
  RSS_BASE_URL: "https://yoursite.com"
  
  # Scheduler Configuration (optional)
  SCHEDULER_RUN_IMMEDIATELY: "true"    # Run immediately on startup
  SCHEDULER_TIMEZONE: "UTC"            # Timezone for schedule times
  
  # Mastodon List Feeds (optional)
  # Bearer token with permission to read the target list timeline
  # Reference from feeds.yaml using token_env: MASTODON_APP_TOKEN
  MASTODON_APP_TOKEN: "your-mastodon-list-token"
  
  # Optional: Override other configuration
  # LOG_LEVEL: "DEBUG"
  # FETCH_INTERVAL_MINUTES: "60"
  # READER_MODE_REQUESTS_PER_MINUTE: "20"
